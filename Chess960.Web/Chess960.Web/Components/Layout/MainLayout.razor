@inherits LayoutComponentBase

<div class="min-h-screen flex flex-col md:flex-row relative overflow-hidden">
    
    <!-- Organic Background Elements -->
    <div class="absolute top-[-10%] left-[-10%] w-[40%] h-[40%] bg-theme-accent/20 rounded-full blur-[100px] pointer-events-none animate-float-slow"></div>
    <div class="absolute bottom-[10%] right-[-5%] w-[30%] h-[30%] bg-theme-glow/10 rounded-full blur-[80px] pointer-events-none animate-float-slow" style="animation-delay: 2s;"></div>

    <!-- Sidebar -->
    <NavMenu />

    <!-- Main Content Area -->
    <main class="flex-1 md:ml-24 lg:ml-64 p-4 md:p-8 transition-all duration-300 relative z-10">
        <!-- Top Bar (Hidden on Desktop) -->
        <div class="md:hidden flex justify-between items-center mb-6">
            <div class="flex items-center gap-3">
                <span class="text-xl font-display font-bold text-white tracking-wider">CHESS<span class="text-theme-accent">960</span></span>
            </div>
        </div>

        <article class="animate-soft-up">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
