@page "/Account/ForgotPasswordConfirmation"

<PageTitle>Jelszóvisszaállítás megerősítése</PageTitle>

<div class="min-h-screen flex items-center justify-center p-4">
    <div class="w-full max-w-md bg-black/40 backdrop-blur-xl border border-white/10 rounded-2xl p-8 shadow-2xl relative overflow-hidden text-center">
        <!-- Success Icon -->
        <div class="w-16 h-16 bg-green-500/20 rounded-full flex items-center justify-center mx-auto mb-6">
            <span class="bi bi-envelope-check-fill text-2xl text-green-500"></span>
        </div>

        <h1 class="text-2xl font-bold text-white mb-2 font-display">Email elküldve!</h1>
        <p class="text-theme-muted mb-8 leading-relaxed">
            Kérlek ellenőrizd az email fiókodat a jelszó visszaállításához szükséges linkért.
        </p>
        
        <a href="/" class="inline-block px-6 py-2 bg-white/10 hover:bg-white/20 text-white rounded-lg transition-colors text-sm font-bold">
            Vissza a főoldalra
        </a>
    </div>
</div>
