@page "/Account/ResetPasswordConfirmation"

<PageTitle>Jelszó sikeresen visszaállítva</PageTitle>

<div class="min-h-screen flex items-center justify-center p-4">
    <div class="w-full max-w-md bg-black/40 backdrop-blur-xl border border-white/10 rounded-2xl p-8 shadow-2xl relative overflow-hidden text-center">
        <!-- Success Icon -->
        <div class="w-16 h-16 bg-green-500/20 rounded-full flex items-center justify-center mx-auto mb-6">
            <span class="bi bi-check-lg text-3xl text-green-500"></span>
        </div>

        <h1 class="text-2xl font-bold text-white mb-2 font-display">Sikeres jelszócsere!</h1>
        <p class="text-theme-muted mb-8 leading-relaxed">
            A jelszavadat sikeresen megváltoztattuk. Most már bejelentkezhetsz az új jelszavaddal.
        </p>
        
        <a href="Account/Login" class="inline-block w-full px-6 py-3 bg-theme-accent hover:bg-theme-glow text-black rounded-xl transition-all shadow-[0_0_15px_rgba(var(--color-accent),0.2)] font-bold uppercase tracking-wide text-sm">
            Bejelentkezés
        </a>
    </div>
</div>
