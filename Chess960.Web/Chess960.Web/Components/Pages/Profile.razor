@page "/profile"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Chess960.Web.Data
@using Chess960.Web.Services
@using Chess960.Web.Components.Dialogs
@rendermode InteractiveServer
@attribute [Authorize]

@inject UserManager<ApplicationUser> UserManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject GameHistoryService HistoryService

<PageTitle>Profile - Chess960</PageTitle>

<div class="max-w-4xl mx-auto py-10 px-4 sm:px-6 lg:px-8">
    @if (user == null)
    {
        <div class="flex justify-center items-center h-64">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-indigo-600"></div>
        </div>
    }
    else
    {
        <!-- Header Section -->
        <div class="glass-panel p-8 mb-8 animate-soft-up">
            <div class="flex items-center gap-8">
                <div class="w-28 h-28 rounded-full bg-gradient-to-br from-theme-accent to-theme-glow flex items-center justify-center text-5xl font-bold text-black shadow-[0_0_40px_rgba(var(--color-accent),0.4)]">
                    @user.UserName?.Substring(0, 1).ToUpper()
                </div>
                <div>
                    <h1 class="text-5xl font-display font-bold text-white mb-2 tracking-tight">@user.UserName</h1>
                    <div class="flex items-center gap-2 text-theme-muted font-medium text-lg">
                        <span class="bi bi-envelope text-theme-accent"></span> @user.Email
                    </div>
                </div>
            </div>
        </div>

        <!-- Stats Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5 gap-6 mb-8 animate-soft-up animate-delay-100">
            <!-- Bullet Elo -->
            <div class="glass-panel p-6 group hover:bg-white/10 transition-colors">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-[10px] font-bold text-theme-muted uppercase tracking-widest group-hover:text-white transition-colors">Bullet</p>
                        <p class="text-4xl font-display font-bold text-white mt-2 group-hover:text-glow transition-all">@user.EloBullet</p>
                    </div>
                    <div class="text-white/20 group-hover:text-amber-400 transition-colors">
                        <span class="bi bi-lightning-fill text-4xl"></span>
                    </div>
                </div>
            </div>

            <!-- Blitz Elo -->
            <div class="glass-panel p-6 group hover:bg-white/10 transition-colors">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-[10px] font-bold text-theme-muted uppercase tracking-widest group-hover:text-white transition-colors">Blitz</p>
                        <p class="text-4xl font-display font-bold text-white mt-2 group-hover:text-glow transition-all">@user.EloBlitz</p>
                    </div>
                    <div class="text-white/20 group-hover:text-orange-500 transition-colors">
                        <span class="bi bi-fire text-4xl"></span>
                    </div>
                </div>
            </div>

            <!-- Rapid Elo -->
            <div class="glass-panel p-6 group hover:bg-white/10 transition-colors">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-[10px] font-bold text-theme-muted uppercase tracking-widest group-hover:text-white transition-colors">Rapid</p>
                        <p class="text-4xl font-display font-bold text-white mt-2 group-hover:text-glow transition-all">@user.EloRapid</p>
                    </div>
                    <div class="text-white/20 group-hover:text-green-400 transition-colors">
                        <span class="bi bi-stopwatch-fill text-4xl"></span>
                    </div>
                </div>
            </div>

            <!-- Games Played Card -->
            <div class="glass-panel p-6 group hover:bg-white/10 transition-colors">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-[10px] font-bold text-theme-muted uppercase tracking-widest group-hover:text-white transition-colors">Games</p>
                        <p class="text-4xl font-display font-bold text-white mt-2">@user.GamesPlayed</p>
                    </div>
                    <div class="text-white/20 group-hover:text-theme-accent transition-colors">
                        <span class="bi bi-controller text-4xl"></span>
                    </div>
                </div>
            </div>

            <!-- Win Rate Card -->
            <div class="glass-panel p-6 group hover:bg-white/10 transition-colors">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-[10px] font-bold text-theme-muted uppercase tracking-widest group-hover:text-white transition-colors">Win Rate</p>
                        <p class="text-4xl font-display font-bold text-white mt-2">@GetWinRate()%</p>
                    </div>
                    <div class="text-white/20 group-hover:text-theme-accent transition-colors">
                        <span class="bi bi-graph-up-arrow text-4xl"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity / History -->
        <div class="glass-panel p-8 animate-soft-up animate-delay-200">
            <h2 class="text-2xl font-display font-bold text-white mb-6 border-b border-white/10 pb-4">Recent Activity</h2>
            
            @if (games == null)
            {
                 <div class="flex justify-center py-4">
                    <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-white"></div>
                </div>
            }
            else if (games.Count == 0)
            {
                <div class="text-center py-16">
                    <div class="w-20 h-20 bg-white/5 rounded-full flex items-center justify-center mx-auto mb-6 text-white/30 border border-white/10">
                        <span class="bi bi-clock-history text-4xl"></span>
                    </div>
                    <p class="text-theme-muted mb-8 font-medium text-lg">No recent games found.</p>
                    <a href="play-online" class="btn-pill inline-block">
                        Start a Game
                    </a>
                </div>
            }
            else
            {
                <div class="overflow-x-auto">
                    <table class="w-full text-left border-collapse">
                        <thead>
                            <tr class="text-white/40 border-b border-white/5 text-xs uppercase tracking-wider">
                                <th class="p-4">Date</th>
                                <th class="p-4">Opponent</th>
                                <th class="p-4">Result</th>
                                <th class="p-4 text-right">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="text-white/80">
                            @foreach (var game in games)
                            {
                                <tr class="border-b border-white/5 hover:bg-white/5 transition-colors group">
                                    <td class="p-4 font-mono text-sm">@game.DatePlayed.ToString("yyyy.MM.dd HH:mm")</td>
                                    <td class="p-4 font-bold">
                                        @(game.WhiteUserId == user.Id ? "vs Black" : "vs White")
                                    </td>
                                    <td class="p-4">
                                        <span class="px-2 py-1 rounded text-xs font-bold uppercase tracking-wide @(GetResultClass(game))">
                                            @GetResultLabel(game)
                                        </span>
                                    </td>
                                    <td class="p-4 text-right">
                                        <a href="replay/@game.Id" class="text-theme-accent hover:text-white transition-colors inline-block">
                                            <span class="bi bi-eye-fill mr-1"></span> View
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    }
</div>

@code {
    private ApplicationUser? user;
    private List<GameHistory>? games;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var principal = authState.User;

        if (principal.Identity?.IsAuthenticated == true)
        {
            user = await UserManager.GetUserAsync(principal);
            if (user != null)
            {
                games = await HistoryService.GetGamesForUserAsync(user.Id);
            }
        }
    }

    private int GetWinRate()
    {
        if (user == null || user.GamesPlayed == 0) return 0;
        return (int)((double)user.GamesWon / user.GamesPlayed * 100);
    }

    private string GetResultClass(GameHistory game)
    {
        // Simple logic: if I am White and Result is WhiteWon -> Win
        bool amWhite = game.WhiteUserId == user?.Id;
        if (game.Result == "Draw") return "bg-gray-500/20 text-gray-400";
        if (game.Result == "WhiteWon") return amWhite ? "bg-green-500/20 text-green-400" : "bg-red-500/20 text-red-400";
        if (game.Result == "BlackWon") return (!amWhite) ? "bg-green-500/20 text-green-400" : "bg-red-500/20 text-red-400";
        return "bg-gray-500/20 text-gray-400";
    }

    private string GetResultLabel(GameHistory game)
    {
        bool amWhite = game.WhiteUserId == user?.Id;
        if (game.Result == "Draw") return "Draw";
        if (game.Result == "WhiteWon") return amWhite ? "Won" : "Lost";
        if (game.Result == "BlackWon") return (!amWhite) ? "Won" : "Lost";
        return "Unknown";
    }
}
