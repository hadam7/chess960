@page "/profile"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Chess960.Web.Data
@attribute [Authorize]

@inject UserManager<ApplicationUser> UserManager
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>Profile - Chess960</PageTitle>

<div class="max-w-4xl mx-auto py-10 px-4 sm:px-6 lg:px-8">
    @if (user == null)
    {
        <div class="flex justify-center items-center h-64">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-indigo-600"></div>
        </div>
    }
    else
    {
        <!-- Header Section -->
        <div class="bg-white shadow-xl rounded-2xl overflow-hidden mb-8 transform transition-all hover:scale-[1.01] duration-300">
            <div class="bg-gradient-to-r from-indigo-600 to-purple-600 h-32"></div>
            <div class="px-6 pb-6 relative">
                <div class="flex items-end -mt-12 mb-4">
                    <div class="h-24 w-24 rounded-full border-4 border-white bg-stone-800 flex items-center justify-center text-3xl font-bold text-white shadow-lg">
                        @user.UserName?.Substring(0, 1).ToUpper()
                    </div>
                    <div class="ml-4 mb-1">
                        <h1 class="text-3xl font-bold text-gray-900">@user.UserName</h1>
                        <p class="text-sm text-gray-500">@user.Email</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Stats Grid -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <!-- Elo Rating Card -->
            <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-yellow-400 hover:shadow-lg transition-shadow">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 uppercase tracking-wider">Elo Rating</p>
                        <p class="text-3xl font-bold text-gray-900 mt-1">@user.EloRating</p>
                    </div>
                    <div class="p-3 bg-yellow-100 rounded-full text-yellow-600">
                        <span class="bi bi-trophy-fill text-xl"></span>
                    </div>
                </div>
            </div>

            <!-- Games Played Card -->
            <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-blue-500 hover:shadow-lg transition-shadow">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 uppercase tracking-wider">Games Played</p>
                        <p class="text-3xl font-bold text-gray-900 mt-1">@user.GamesPlayed</p>
                    </div>
                    <div class="p-3 bg-blue-100 rounded-full text-blue-600">
                        <span class="bi bi-controller text-xl"></span>
                    </div>
                </div>
            </div>

            <!-- Win Rate Card -->
            <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-green-500 hover:shadow-lg transition-shadow">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 uppercase tracking-wider">Win Rate</p>
                        <p class="text-3xl font-bold text-gray-900 mt-1">@GetWinRate()%</p>
                    </div>
                    <div class="p-3 bg-green-100 rounded-full text-green-600">
                        <span class="bi bi-graph-up-arrow text-xl"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity / History Placeholder -->
        <div class="bg-white shadow-md rounded-xl p-6">
            <h2 class="text-xl font-bold text-gray-900 mb-4">Recent Activity</h2>
            <div class="text-center py-8 text-gray-500">
                <span class="bi bi-clock-history text-4xl mb-2 block opacity-50"></span>
                <p>No recent games found.</p>
                <button class="mt-4 px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 transition-colors" onclick="window.location.href='/'">
                    Play a Game
                </button>
            </div>
        </div>
    }
</div>

@code {
    private ApplicationUser? user;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var principal = authState.User;

        if (principal.Identity?.IsAuthenticated == true)
        {
            user = await UserManager.GetUserAsync(principal);
        }
    }

    private int GetWinRate()
    {
        if (user == null || user.GamesPlayed == 0) return 0;
        return (int)((double)user.GamesWon / user.GamesPlayed * 100);
    }
}
