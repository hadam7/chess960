@page "/lobby"
@using Chess960.Web.Client.Services
@inject MultiplayerService Multiplayer
@inject NavigationManager Nav
@inject NavigationManager Nav
@implements IAsyncDisposable
@rendermode InteractiveWebAssembly

<PageTitle>Multiplayer Lobby</PageTitle>

<div class="min-h-screen flex flex-col items-center justify-center p-4 animate-soft-up">
    <div class="glass-panel p-12 max-w-2xl w-full text-center relative overflow-hidden">
        
        <!-- Background Effects -->
        <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-b from-theme-accent/5 to-transparent pointer-events-none"></div>
        
        <h1 class="text-5xl font-display font-bold mb-6 text-white drop-shadow-lg outline-none" tabindex="-1">Multiplayer Arena</h1>
        <p class="text-theme-muted text-lg mb-12">Challenge players from around the world in real-time Chess960.</p>

        @if (isSearching)
        {
            <div class="flex flex-col items-center space-y-6 animate-pulse">
                <div class="w-24 h-24 rounded-full border-4 border-theme-accent border-t-transparent animate-spin"></div>
                <h2 class="text-2xl font-bold text-theme-accent">Searching for opponent...</h2>
                <p class="text-white/60">Please wait while we find a worthy challenger.</p>
                <button @onclick="CancelSearch" class="btn-glass text-sm px-6 py-2 mt-4 hover:bg-red-500/20 hover:border-red-500/50">Cancel Search</button>
            </div>
        }
        else
        {
            <div class="flex flex-col gap-6 items-center">
                <button @onclick="FindMatch" class="btn-pill text-xl px-12 py-4 flex items-center gap-4 group">
                    <span class="bi bi-lightning-charge-fill text-2xl group-hover:scale-110 transition-transform"></span>
                    <span>Find Match</span>
                </button>
                
                <div class="text-sm text-theme-muted">
                    <span class="bi bi-people-fill mr-2"></span>
                    <span>Online Players: <span class="text-theme-accent">--</span></span>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private bool isSearching = false;

    protected override async Task OnInitializedAsync()
    {
        await Multiplayer.InitializeAsync();
        Multiplayer.OnWaitingForMatch += HandleWaiting;
        Multiplayer.OnGameStarted += HandleGameStarted;
    }

    private async Task FindMatch()
    {
        isSearching = true;
        await Multiplayer.FindMatch();
    }

    private void CancelSearch()
    {
        isSearching = false;
        // Ideally send a cancel request to server too
        Nav.NavigateTo("/");
    }

    private void HandleWaiting()
    {
        isSearching = true;
        StateHasChanged();
    }

    private void HandleGameStarted(string gameId, string fen, string whiteId, string blackId)
    {
        isSearching = false;
        Nav.NavigateTo($"/play-online?id={gameId}&fen={Uri.EscapeDataString(fen)}&white={whiteId}&black={blackId}");
    }

    public async ValueTask DisposeAsync()
    {
        Multiplayer.OnWaitingForMatch -= HandleWaiting;
        Multiplayer.OnGameStarted -= HandleGameStarted;
    }
}
